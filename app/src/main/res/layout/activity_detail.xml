<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context="marty.ration.com.flitto_kimeunchan.DetailActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                style="@style/book_detail_textview"
                android:id="@+id/book_image"
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:scaleType="center"
                />

            <TextView
                style="@style/book_detail_textview"
                android:id="@+id/book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/book_image"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text=""
                />
            <TextView
                style="@style/book_detail_textview"
                android:id="@+id/book_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/book_title"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@id/book_title"/>
            <TextView
                style="@style/book_detail_textview"
                android:id="@+id/book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/book_subtitle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"

                />
            <TextView
                style="@style/book_detail_textview"
                android:id="@+id/book_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/book_author"
                android:layout_marginTop="10dp"

                android:layout_alignLeft="@id/book_title"/>
            <TextView
                style="@style/book_detail_textview"
                android:id="@+id/book_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/book_price"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>
